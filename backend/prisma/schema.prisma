// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

// CORREÇÃO: Altera de "mysql" para "postgresql"
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// CORREÇÃO: Usa IDs String com UUIDs
model User {
  id               String         @id @default(uuid())
  email            String         @unique
  name             String?
  password         String?
  oauthId          String?
  createdAt        DateTime       @default(now())
  conversations    Conversation[]
  isSubscriber     Boolean        @default(false)
}

// CORREÇÃO: Usa IDs String com UUIDs
model Chat {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String   // CORREÇÃO: Altera para String
  message       String
  sender        String
  createdAt     DateTime @default(now())
  isSubscriber  Boolean  @default(false)
}

// CORREÇÃO: Usa IDs String com UUIDs
model Conversation {
  id           String    @id @default(uuid())
  userId       String    // CORREÇÃO: Altera para String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  question     String
  answer       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  messages     Message[] // CORREÇÃO: Adiciona a relação com o modelo Message
}

// CORREÇÃO: Este modelo estava faltando
model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         String
  text           String
  createdAt      DateTime     @default(now())
}